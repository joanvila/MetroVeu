<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#179DEF" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#179DEF"
                android:endColor="#179DEF"
                android:angle="270" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>