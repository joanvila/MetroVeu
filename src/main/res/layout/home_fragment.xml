<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="150dp">

    <TextView android:text="@string/home" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="32sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_lines_button"
            android:id="@+id/show_lines_button"
            android:layout_marginTop="20dp"
            android:background="@color/color5Gray"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_routes_button"
            android:id="@+id/show_routes_button"
            android:layout_marginTop="20dp"
            android:background="@color/color5Gray"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_rate_button"
            android:id="@+id/show_rate_button"
            android:layout_marginTop="20dp"
            android:background="@color/color5Gray"
            android:onClick="buttonClick" />
    </LinearLayout>
</LinearLayout>